@import "standards.styl"

.vfi-signup-title
  width: 100%
  max-width: 100%
  margin: 0 auto

  & h3
    line-height: 32px !important

.vfi-signup-view
.vfi-login-view
  text-align: center

  .vfi-submit-btn
    position: relative
    width: 360px
    height: 42px
    background-color: colorPrimaryBlue
    overflow: hidden

    & .vfi-progress
      position: absolute
      top: 0px
      left: 0px
      width: 0%
      height: 100%
      background-color: colorPrimaryDarkBlue
    & .vfi-txt
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  & input
    display: block
    height: 36px
    width: 360px
    margin: 0 auto 12px
    padding: 8px 16px
    box-sizing: border-box
    border: 1px solid colorLightGray
    border-radius: 6px
    outline: none

    &:active
    &:focus
      box-shadow: 0px 0px 1px 1px colorLightBlue
      border: 1px solid colorLightBlue
